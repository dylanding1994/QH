<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <!--log4net日志功能的配置文件-->
  <configSections>
    <section name="log4net" type="log4net.Config.Log4NetConfigurationSectionHandler, log4net"/>
  </configSections>
  <log4net>
    <!--调试日志（普通）-->
    <!--定义输出到文件中-->
    <appender name="InfoRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--确保其他进程可以操作文件  注释掉-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--定义文件存放位置-->
      <file value="log\\Info\\"/>
      <!--当文件存在时，在原文件上添加内容-->
      <appendToFile value="true"/>
      <!--设置文件名的格式-->
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd'.log'"/>
      <!--最大文件大小 默认单位字节-->
      <maximumFileSize value="2MB"/>
      <!--rue/false，默认为true。为true时，RollingStyler的date值将无效。且为true时，需要在file里指定文件名，所有日志都会记录在这个文件里-->
      <staticLogFileName value="false"/>
      <!--备份日志数目，默认为0 在CountDirection为负数时有效  最多保留的历史文件个数-->
      <param name="MaxSizeRollBackups" value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n日志类：%logger property: [%property{NDC}] - %n错误描述：%message%newline %n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="INFO"/>
        <param name="LevelMax" value="INFO"/>
      </filter>
    </appender>
    <!--错误日志 一般错误-->
    <!--定义输出到文件中-->
    <appender name="ErrorRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--确保其他进程可以操作文件  注释掉-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--定义文件存放位置-->
      <file value="log\\Error\\"/>
      <!--当文件存在时，在原文件上添加内容-->
      <appendToFile value="true"/>
      <!--设置文件名的格式-->
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd'.log'"/>
      <!--最大文件大小 默认单位字节-->
      <maximumFileSize value="2MB"/>
      <!--rue/false，默认为true。为true时，RollingStyler的date值将无效。且为true时，需要在file里指定文件名，所有日志都会记录在这个文件里-->
      <staticLogFileName value="false"/>
      <!--备份日志数目，默认为0 在CountDirection为负数时有效  最多保留的历史文件个数-->
      <param name="MaxSizeRollBackups" value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n日志类：%logger property: [%property{NDC}] - %n错误描述：%message%newline %n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="ERROR"/>
        <param name="LevelMax" value="ERROR"/>
      </filter>
    </appender>
    <!--致命错误日志 重要 -->
    <!--定义输出到文件中-->
    <appender name="FatalRollingFileAppender" type="log4net.Appender.RollingFileAppender">
      <!--确保其他进程可以操作文件  注释掉-->
      <lockingModel type="log4net.Appender.FileAppender+MinimalLock"/>
      <!--定义文件存放位置-->
      <file value="log\\Fatal\\"/>
      <!--当文件存在时，在原文件上添加内容-->
      <appendToFile value="true"/>
      <!--设置文件名的格式-->
      <rollingStyle value="Date"/>
      <datePattern value="yyyyMMdd'.log'"/>
      <!--最大文件大小 默认单位字节-->
      <maximumFileSize value="2MB"/>
      <!--rue/false，默认为true。为true时，RollingStyler的date值将无效。且为true时，需要在file里指定文件名，所有日志都会记录在这个文件里-->
      <staticLogFileName value="false"/>
      <!--备份日志数目，默认为0 在CountDirection为负数时有效  最多保留的历史文件个数-->
      <param name="MaxSizeRollBackups" value="10"/>
      <layout type="log4net.Layout.PatternLayout">
        <!--每条日志末尾的文字说明-->
        <!--输出格式-->
        <!--样例：2008-03-26 13:42:32,111 [10] INFO  Log4NetDemo.MainClass [(null)] - info-->
        <conversionPattern value="%newline %n记录时间：%date %n线程ID:[%thread] %n日志级别：  %-5level %n日志类：%logger property: [%property{NDC}] - %n错误描述：%message%newline %n"/>
      </layout>
      <filter type="log4net.Filter.LevelRangeFilter">
        <param name="LevelMin" value="FATAL"/>
        <param name="LevelMax" value="FATAL"/>
      </filter>
    </appender>
    <root>
      <level value="ALL"/>
      <!--文件形式记录日志-->
      <appender-ref ref="ErrorRollingFileAppender"/>
      <appender-ref ref="FatalRollingFileAppender"/>
      <appender-ref ref="InfoRollingFileAppender"/>
    </root>
  </log4net>
</configuration>